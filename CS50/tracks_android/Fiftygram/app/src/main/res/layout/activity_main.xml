<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view" />

    <Button
        android:id="@+id/button_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="choosePhoto"
        android:text="Choose photo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sepia"
        android:onClick="applySepia" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toon"
        android:onClick="applyToon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="applySketch"
        android:text="Sketch" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="applyPixelation"
        android:text="Pixelation" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brightness"
        android:onClick="applyBrightness"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vignette"
        android:onClick="applyVignette" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invert"
        android:onClick="applyInvert"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GrayScale"
        android:onClick="applyGrayscale"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blur"
        android:onClick="applyblur"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveImage"/>
  </LinearLayout>
</ScrollView>
